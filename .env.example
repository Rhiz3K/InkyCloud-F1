# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=false

# Container Runtime Configuration
# These improve logging and behavior in containerized environments
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Port (can be overridden by container orchestration platforms like Coolify)
PORT=8000

# Sentry/GlitchTip Configuration
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Umami Analytics Configuration
UMAMI_WEBSITE_ID=
UMAMI_API_URL=https://analytics.example.com/api/send
UMAMI_ENABLED=false
# Hostname reported to analytics (e.g., f1.inkycloud.click)
ANALYTICS_HOSTNAME=

# API Configuration
JOLPICA_API_URL=https://api.jolpi.ca/ergast/f1/current/next.json
REQUEST_TIMEOUT=10

# Default Language
DEFAULT_LANG=en

# Default Timezone (IANA format)
DEFAULT_TIMEZONE=Europe/Prague

# Database and Storage Configuration
# Use absolute paths in containers (e.g., /app/data/f1.db for Docker)
# Use relative paths for local development (e.g., ./data/f1.db)
DATABASE_PATH=/app/data/f1.db
IMAGES_PATH=/app/data/images

# Scheduler Configuration
SCHEDULER_ENABLED=true

# S3 Backup Configuration
# Enable automatic backups to S3-compatible storage (Cloudflare R2, AWS S3, MinIO, etc.)
BACKUP_ENABLED=false
# Cron expression for backup schedule (default: daily at 3 AM UTC)
BACKUP_CRON=0 3 * * *
# Number of days to retain backups (0 to disable automatic cleanup)
BACKUP_RETENTION_DAYS=30

# S3 Connection Settings (required when BACKUP_ENABLED=true)
# Example for Cloudflare R2: https://<account_id>.r2.cloudflarestorage.com
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
# Region (use "auto" for Cloudflare R2)
S3_REGION=auto
